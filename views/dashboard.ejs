<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-slate-100 min-h-screen flex flex-col">
    <%- include("./partials/navbar") %>
    <%- include("./partials/alerts") %>

    <main class="flex-1 container mx-auto px-4 py-8">
      <section class="max-w-2xl mx-auto space-y-6">
        <div>
          <h1 class="text-2xl font-bold mb-2">
            Welcome <%= currentUser ? currentUser.first_name : "member" %>!
          </h1>
          <p class="text-slate-700">
            This is your Members Only dashboard.
          </p>
        </div>

        <!-- Member status card -->
        <div class="bg-white rounded-lg shadow-sm border p-4">
          <h2 class="text-lg font-semibold mb-2">Membership status</h2>

          <% if (isMember) { %>
            <p class="text-green-700 font-medium mb-1">You are a club member âœ…</p>
          <% } else { %>
            <p class="text-slate-700 mb-2">
              You are currently <span class="font-semibold">not a member</span>.
            </p>
            <a
              href="/join"
              class="inline-block px-4 py-2 rounded-full bg-black text-white text-sm font-semibold"
            >
              Join the club
            </a>
          <% } %>

          <% if (isAdmin) { %>
            <p class="mt-3 text-sm text-purple-700 font-semibold">
              You are an admin ðŸ› 
            </p>
          <% } %>
        </div>

        <!-- Shortcuts -->
        <div class="bg-white rounded-lg shadow-sm border p-4">
          <h2 class="text-lg font-semibold mb-3">Quick actions</h2>

          <div class="flex flex-wrap gap-3">
            <a
              href="/"
              class="px-4 py-2 rounded-full bg-slate-800 text-white text-sm font-semibold"
            >
              Go to home (all messages)
            </a>

            <a
              href="/messages/new"
              class="px-4 py-2 rounded-full bg-black text-white text-sm font-semibold"
            >
              Create new post
            </a>

            <% if (!isAdmin && isMember) { %>
              <a
                href="/admin"
                class="px-4 py-2 rounded-full bg-purple-700 text-white text-sm font-semibold"
              >
                Become admin
              </a>
            <% } %>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>